<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/fondo_nasa"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile"
                android:layout_gravity="start|bottom"/>
        </FrameLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:text="Perfil"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:paddingStart="10dp"
            tools:ignore="HardcodedText,RtlSymmetry"
            android:backgroundTint="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile_name"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del titular"
                android:textSize="40dp"
                android:inputType="textPersonName"
                tools:ignore="HardcodedText,TextViewEdits" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_phone"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del titular"
                android:textSize="40dp"
                android:inputType="phone"
                tools:ignore="HardcodedText,TextViewEdits" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_direction"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/userAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del titular"
                android:textSize="40dp"
                android:inputType="text"
                tools:ignore="HardcodedText,TextViewEdits" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/userPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del titular"
                android:textSize="40dp"
                android:inputType="textPostalAddress"
                tools:ignore="HardcodedText,TextViewEdits" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Editar Informacion"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/button_color_selector"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/logout"
            android:text="Cerrar sesiÃ³n"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_home"
            />
        <ImageView
            android:id="@+id/btnHelp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_help" />
        <ImageView
            android:id="@+id/btnPay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_pay" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>